{% extends 'base.html.twig' %}

{% block title %}Employé(e)s
{% endblock %}
{% block styles %}
	{# Datatables styles #}
	{% include "datatable/styles.html.twig" %}
{% endblock %}
{% block header %}
	Employés
{% endblock %}
{% block body %}
	<div class="card card-primary card-outline">
		<div class="card-header">
			<a class="btn btn-success large" href="{{ path('app_employee_new') }}">
				<i class="fas fa-plus-circle"></i>
				Nouvelle entrée</a>
		</div>
		<!-- /.card-header -->
		<div class="card-body">
			<table id="datatable" class="table table-bordered table-striped card-secondary card-outline table-hover">
				<thead>
					<tr>
						<th>Photo</th>
						<th>Code</th>
						<th>Prénom(s)</th>
						<th>Nom(s)</th>
						{# <th>Departement</th> #}
						<th>Status</th>
						<th>actions</th>
					</tr>
				</thead>
				<tbody>
					{% for employee in employees %}
						<tr>
							<td>
								<div class="image">
									<img src="{{asset('uploads/employees/avatars/'~employee.employeePhoto)}}" class="img-circle" alt="avatar" height="40px" width="40px">
								</div>
							</td>
							<td>{{ employee.employeeCode }}</td>
							<td>{{ employee.employeeName }}</td>
							<td>{{ employee.employeeSurname }}</td>
							{# <td>{{  employee.getDepts ? employee.getDepts|json_encode : '' }}</td> #}
							<td>{{ employee.employeeStatus }}</td>
							<td>
								<div class="btn-group" role="group" aria-label="Basic example">
									<a href="{{ path('app_employee_show', {'id': employee.id}) }}">
										<button type="button" class="btn btn-primary btn-sm show-btn">
											<i class="fas fa-eye text-white"></i>
											Voir</button>
									</a>
									<a href="{{ path('app_employee_edit', {'id': employee.id}) }}">
										<button type="button" class="btn btn-warning btn-sm edit-btn">
											<i class="fas fa-edit"></i>
											Modifier</button>
									</a>
									{{ include('employee/_delete_form.html.twig') }}
								</div>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="8">aucun enregistrement</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>


		</div>
		<!-- /.card-body -->
	</div>
	<!-- /.card -->
{% endblock %}
{% block scripts %}
	{# Datatables scripts #}
	{{ include('datatable/scripts.html.twig') }}
	<script src="{{asset('js/delete-confirm.js')}} "></script>
{% endblock %}
