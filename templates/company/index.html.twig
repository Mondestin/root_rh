{% extends 'base.html.twig' %}

{% block title %}Information de l'Entreprise

{% endblock %}
{% block styles %}
{# Datatables styles #}
{% include "datatable/styles.html.twig" %}
{% endblock %}
{% block header %}
	Information de l'Entreprise
{% endblock %}
{% block body %}
	<div class="card card-primary card-outline">
		<!-- /.card-header -->
		<div class="card-body">
			<table id="datatable" class="table table-bordered table-striped">
				<thead>
					<tr>
						<th>Nom</th>
						<th>Adresse</th>
						<th>Télépone</th>
						<th>Email</th>
						<th>Siret</th>
						<th>N° TVA</th>
						<th>Logo</th>
						<th>Site web</th>
						<th>actions</th>
					</tr>
				</thead>
				<tbody>
					{% for company in companies %}
						<tr>
							<td>{{ company.companyName }}</td>
							<td>{{ company.adress }}</td>
							<td>{{ company.phone }}</td>
							<td>{{ company.email }}</td>
							<td>{{ company.siret }}</td>
							<td>{{ company.tvaNo }}</td>
							<td>{{ company.logo }}</td>
							<td>{{ company.siteWeb }}</td>
							<td>
								<div class="btn-group" role="group" aria-label="Basic example">
									<a href="{{ path('app_company_show', {'id': company.id}) }}">
										<button type="button" class="btn btn-primary btn-sm show-btn">
											<i class="fas fa-eye text-white"></i>
											Voir</button>
									</a>
									<a href="{{ path('app_company_edit', {'id': company.id}) }}">
										<button type="button" class="btn btn-warning btn-sm edit-btn">
											<i class="fas fa-edit"></i>
											Modifier</button>
									</a>
									{{ include('company/_delete_form.html.twig') }}
								</div>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="10">aucun enregistrement</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}
{% block scripts %}
{# Datatables scripts #}
{{ include('datatable/scripts.html.twig') }}
<script src="{{asset('js/delete-confirm.js')}} "></script>
{% endblock %}