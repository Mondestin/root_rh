{% extends 'base.html.twig' %}

{% block title %}Utilisateurs
{% endblock %}
{% block header %}
	Utilisateurs
{% endblock %}
{% block styles %}
	{# Datatables styles #}
	{% include "datatable/styles.html.twig" %}
{% endblock %}
{% block body %}
	<div class="card card-primary card-outline">
		<div class="card-header">
			<h3 class="card-title">Liste des utilisateurs</h3>
		</div>
		<!-- /.card-header -->
		<div class="card-body">
			<table id="datatable" class="table table-bordered table-striped">
				<thead>
					<tr>
						<th>Email</th>
						<th>Roles</th>
						<th>Nom(s) et Pr√©nom(s)</th>
						<th>actions</th>
					</tr>
				</thead>
				<tbody>
					{% for user in users %}
						<tr>
							<td>{{ user.email }}</td>
							<td>
								{% for userRole in user.rolesName  %}
									{{ userRole }}
									/
								{% endfor %}
							</td>
							<td>{{ user.username }}</td>
							<td>
								<div class="btn-group" role="group" aria-label="Basic example">
									<a href="{{ path('app_user_show', {'id': user.id}) }}">
										<button type="button" class="btn btn-primary btn-sm show-btn">
											<i class="fas fa-eye text-white"></i>
											Voir</button>
									</a>
									<a href="{{ path('app_user_edit', {'id': user.id}) }}">
										<button type="button" class="btn btn-warning btn-sm edit-btn">
											<i class="fas fa-edit"></i>
											Modifier</button>
									</a>
									{{ include('user/_delete_form.html.twig') }}
								</div>
							</td>

						</tr>
					{% else %}
						<tr>
							<td colspan="6">aucun enregistrement</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}
{% block scripts %}
	{# Datatables scripts #}
	{{ include('datatable/scripts.html.twig') }}
	<script src="{{asset('js/delete-confirm.js')}} "></script>
{% endblock %}
