			<span class="badge bg-primary">
				{{ user.email }}
			</span>
		</li>
	</ul>
</div>
<a href="{{ path('app_user_edit', {'id': user.id}) }}">
	<button class="btn btn-warning btn-sm">
		<i class="far fa-edit"></i>
		Modifier</button>
</a>

