{% extends 'base.html.twig' %}

{% block title %}Liste des clients
{% endblock %}
{% block styles %}
	{# Datatables styles #}
	{% include "datatable/styles.html.twig" %}
{% endblock %}
{% block header %}
	Clients
{% endblock %}
{% block body %}
	<div
		class="card card-outline card-primary">
		<!-- /.card-header -->
		<div class="card-header">
			<a class="btn btn-success" href="{{ path('app_customers_new') }}">
				<i class="fas fa-plus-circle"></i>
				Nouvelle entrée</a>
		</div>
		<div class="card-body">
			<table id="datatable" class="table table-bordered table-striped card-secondary card-outline table-hover">
				<thead>
					<tr>
						<th>Code</th>
						<th>Nom(s)</th>
						<th>Prénom(s)</th>
						<th>Société</th>
						<th>actions</th>
					</tr>
				</thead>
				<tbody>
					{% for customer in customers %}
						<tr>
							<td>{{ customer.customerCode }}</td>
							<td>{{ customer.customerName }}</td>
							<td>{{ customer.customerSurname }}</td>
							<td>{{ customer.companyName }}</td>

							<td>
								<a href="{{ path('app_customers_show', {'id': customer.id}) }}">
									<button type="button" class="btn btn-primary btn-sm show-btn">
										<i class="fas fa-eye text-white"></i>
										Voir</button>
								</a>
								<a href="{{ path('app_customers_edit', {'id': customer.id}) }}">
									<button type="button" class="btn btn-warning btn-sm edit-btn">
										<i class="fas fa-edit"></i>
										Modifier</button>
								</a>
								{{ include('customers/_delete_form.html.twig') }}
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="9">aucun enregistrement</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>


{% endblock %}
{% block scripts %}
	{# Datatables scripts #}
	{{ include('datatable/scripts.html.twig') }}
	<script src="{{asset('js/delete-confirm.js')}} "></script>
{% endblock %}
