{% extends 'base.html.twig' %}

{% block title %}Liste des tâches
{% endblock %}
{% block header %}Tâches
{% endblock %}
{% block styles %}
	{# Datatables styles #}
	{% include "datatable/styles.html.twig" %}
{% endblock %}
{% block body %}

	<div class="card card-primary card-outline">
		<div class="card-header">
			<a class="btn btn-success" href="{{ path('app_tasks_new') }}">
				<i class="fas fa-plus-circle"></i>
				Nouvelle entrée</a>
		</div>
		<!-- /.card-header -->
		<div class="card-body">
			<table id="datatable" class="table table-bordered table-striped">
				<thead>
					<tr>
						<th>Désignation</th>
						<th>Description</th>
						<th>Prix</th>
						<th>Statut</th>
						<th>Date de début</th>
						<th>Date de fin</th>

						<th>actions</th>
					</tr>
				</thead>
				<tbody>
					{% for task in tasks %}
						<tr>
							<td>{{ task.name }}</td>
							<td>{{ task.description }}</td>
							<td>{{ task.price }}</td>
							<td>
								{% if task.status == "Terminé" %}
									{% set bg = "success" %}
								{% else %}
									{% set bg = "warning" %}
								{% endif %}
								<span class="badge bg-{{bg}}">{{ task.status }}</span>

							</td>
							<td>{{ task.startDate ? task.startDate|date('Y-m-d') : '' }}</td>
							<td>{{ task.endDate ? task.endDate|date('Y-m-d') : '' }}</td>
							<td>
								<div class="btn-group" role="group" aria-label="Basic example">
									<a href="{{ path('app_tasks_show', {'id': task.id}) }}">
										<button type="button" class="btn btn-primary btn-sm show-btn">
											<i class="fas fa-eye text-white"></i>
											Voir</button>
									</a>
									<a href="{{ path('app_tasks_edit', {'id': task.id}) }}">
										<button type="button" class="btn btn-warning btn-sm edit-btn">
											<i class="fas fa-edit"></i>
											Modifier</button>
									</a>

									{{ include('tasks/_delete_form.html.twig') }}


								</div>
								<a href="{{ path('app_items_index', {'task_id': task.id}) }}">
									<button type="button" class="btn btn-secondary btn-sm edit-btn">
										<i class="fas fa-plus"></i>
										Sous tâches</button>
								</a>
							</td>

						</tr>
					{% else %}
						<tr>
							<td colspan="8">aucun enregistrement</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}
{% block scripts %}
	{# Datatables scripts #}
	{{ include('datatable/scripts.html.twig') }}
	<script src="{{asset('js/delete-confirm.js')}} "></script>
{% endblock %}
