<div class="col-md-3">
	{% if app.request.attributes.get('_route') == 'app_courriers' %}
		<a href="#" class="btn btn-primary btn-block mb-3" data-toggle="modal" data-target="#newMessageModal">
			<i class="fa-solid fa-plus"></i>
			Nouveau message
		</a>
	{% else %}
		<a href="{{path('app_courriers')}}" class="btn btn-primary btn-block mb-3">
			<i class="fa-solid fa-arrow-left"></i>
			Retour au dossier
		</a>
	{% endif %}
	<div class="card card-primary card-outline">
		<div class="card-header">
			<h3 class="card-title">Dossiers</h3>

			<div class="card-tools">
				<button type="button" class="btn btn-tool" data-card-widget="collapse">
					<i class="fas fa-minus"></i>
				</button>
			</div>
		</div>
		<div class="card-body p-0">
			<ul class="nav nav-pills flex-column">
				<li class="nav-item active">
					<a href="{{path('app_courriers')}}" class="nav-link">
						<i class="fas fa-inbox"></i>
						Boîte de réception
						{% if email_no_rec > 0 %}
							<span class="badge bg-primary float-right">
								{{ email_no_rec }}
							</span>
						{% endif %}

					</a>
				</li>
			</li>
			<li class="nav-item">
				<a href="{{path('app_courriers_sent')}}" class="nav-link">
					<i class="far fa-envelope"></i>
					Messages envoyés
					{% if email_no_send > 0 %}
						<span class="badge bg-success float-right">
							{{ email_no_send }}
						</span>
					{% endif %}

				</a>
			</li>
			<li class="nav-item">
				<a href="{{path('app_courriers_archives')}}" class="nav-link">
					<i class="fa-solid fa-box-archive"></i>
					Archives
					{% if email_no_arch > 0 %}
						<span class="badge bg-secondary float-right">{{ email_no_arch }}</span>
					{% endif %}
				</a>
			</li>
			<li class="nav-item">
				<a href="{{path('app_courriers_corbeille')}}" class="nav-link">
					<i class="far fa-trash-alt"></i>
					Corbeille
					{% if email_no_corb > 0 %}
						<span class="badge bg-danger float-right">{{ email_no_corb }}</span>
					{% endif %}

				</a>
			</li>
		</ul>
	</div>
	<!-- /.card-body -->
</div>
<!-- /.card --></div><!-- /.col -->
